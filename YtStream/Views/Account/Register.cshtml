@{
    var ErrMsg = (string)ViewBag.ErrMsg;
    ViewData["Title"] = "Register";
}
@if (!string.IsNullOrEmpty(ErrMsg))
{
    <div class="alert alert-danger">@ErrMsg</div>
}
<div class="row">
    <div class="col-md-3">
        <h2>Create user</h2><br />
        <form asp-action="Register" method="post">
            <div class="form-group">
                <label>User Name</label>
                <input type="text" class="form-control" id="userName" name="userName"
                       rerquired placeholder="Enter user name" />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password" id="password"
                       minlength="@UserManager.PasswordMinLength"
                       required placeholder="Password" />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="passwordRepeat" id="passwordRepeat"
                       minlength="@UserManager.PasswordMinLength"
                       required placeholder="Password" />
            </div>
            <div class="form-check">
                <input type="submit" class="btn btn-primary" value="Register" />
            </div>
        </form>
    </div>
</div>
